<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<br></br>
<div class="container text-center">
  <div class="row">
    <div class="col-sm-4 well">
      <div class="well">
        <h4>Welcome, <%= @user.username.capitalize %></h4>
      </div>
      <div class="well">
        <h4>Community Feed</h4>
      </div>
    </div>

    <div class="col-sm-8">
      <% @events.sort{|a,b| a.date <=> b.date}.each {|event| %>
        <h2><a href="/events/<%=event.id%>"><%=event.title%></a></h2>
        <p>Taking place on: <%=event.date%></p>
        <br><br>
      <% } %>
    </div>
  </div>
</div>
